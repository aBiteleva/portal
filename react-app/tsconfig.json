{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom"
    ],
    "strict": true,
    "sourceMap": true
  },
  "files": [
    "src/portal-react-angular-react-app.tsx",
    "typings.d.ts"
  ],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"]
}
